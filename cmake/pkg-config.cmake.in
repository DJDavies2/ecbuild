file(READ @CMAKE_CURRENT_BINARY_DIR@/@_PAR_FILENAME@.tmp _content)

# convert to gcc linker command
# replace -llibfoo.so with -lfoo
string(REGEX REPLACE "\\-l(lib)?([^\\. \n]*)\\.(so|dylib|a|dll\\.a|lib)" "-l\\2" _content "${_content}")

file(WRITE @CMAKE_BINARY_DIR@/@_PAR_FILENAME@ "${_content}")
