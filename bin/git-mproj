# git-proj: status, branch, checkout
#

set -e

dashless=$(basename "$0" | sed -e 's/-/ /')
USAGE="$dashless <command> [options...]"

SUBDIRECTORY_OK="yes"

PATH=$PATH:$(git --exec-path)
. git-sh-setup

require_work_tree_exists

cd_to_toplevel
cd ..

for d in $( find $PWD -type d -iname ".git" )
do
    gdir=$(dirname $d)
    pushd $gdir > /dev/null
    echo
    echo "### $gdir ###"
    git "$@"
    popd > /dev/null
done


