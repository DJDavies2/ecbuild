#!/usr/bin/env bash

set -e

HERE="$( cd $( dirname "${BASH_SOURCE[0]}" ) && pwd -P )"

ECBUILD_PATH=@CMAKE_SOURCE_DIR@/bin
SRC_DIR=@CMAKE_CURRENT_SOURCE_DIR@

# Add ecbuild to path
export PATH=$ECBUILD_PATH:$PATH

# --------------------- cleanup ------------------------
rm -rf $HERE/dummy

# ------------------ build project ---------------------
mkdir -p $HERE/dummy
cd $HERE/dummy

ecbuild -- $SRC_DIR/dummy
make

